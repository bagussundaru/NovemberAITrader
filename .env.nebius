# Environment Configuration for Nebius VM (103.126.116.150)
# Bybit Margin Trading Configuration

# ========================================
# Application Configuration
# ========================================
NODE_ENV=production
NEXT_PUBLIC_URL="http://103.126.116.150:3000"
PORT=3000

# ========================================
# Bybit Configuration (Margin Trading)
# ========================================
# Bybit API Credentials
BYBIT_API_URL="https://api.bybit.com"
BYBIT_API_KEY="YOUR_BYBIT_API_KEY_HERE"
BYBIT_API_SECRET="YOUR_BYBIT_API_SECRET_HERE"
BYBIT_TESTNET="false"  # Set to false for live trading, true for testnet

# Bybit Account Type
# Options: UNIFIED (recommended for margin), CONTRACT, SPOT
BYBIT_ACCOUNT_TYPE="UNIFIED"

# ========================================
# Nebius AI Configuration
# ========================================
NEBIUS_API_URL="https://api.nebius.ai"
NEBIUS_JWT_TOKEN="YOUR_NEBIUS_JWT_TOKEN_HERE"
NEBIUS_MODEL="default"
NEBIUS_MAX_RETRIES="3"
NEBIUS_TIMEOUT="30000"

# ========================================
# Database Configuration
# ========================================
# Will be set by deployment script
DATABASE_URL="postgresql://trading_user:GENERATED_PASSWORD@localhost:5432/trading_bot"

# ========================================
# Trading Bot Risk Management (Margin Trading)
# ========================================
# Maximum daily loss in USDT (important for margin!)
MAX_DAILY_LOSS="200"

# Maximum position size in USDT per trade
MAX_POSITION_SIZE="500"

# Stop loss percentage (critical for margin trading)
STOP_LOSS_PERCENTAGE="3"

# Maximum number of concurrent open positions
MAX_OPEN_POSITIONS="3"

# Emergency stop enabled (automatically stops trading on critical errors)
EMERGENCY_STOP_ENABLED="true"

# Leverage settings for margin trading
# CAUTION: Higher leverage = Higher risk!
# Recommended: 1-5x for beginners, max 10x for experienced
MAX_LEVERAGE="5"

# Margin mode: cross or isolated
# cross = shared margin across all positions
# isolated = separate margin per position (recommended for beginners)
MARGIN_MODE="isolated"

# ========================================
# Trading Configuration
# ========================================
# Trading pairs (comma-separated)
TRADING_PAIRS="BTC/USDT,ETH/USDT"

# Market data update interval in milliseconds
MARKET_DATA_UPDATE_INTERVAL="1000"

# Starting capital in USDT
START_MONEY="100"

# ========================================
# Security
# ========================================
# Secret key for cron jobs and API authentication
CRON_SECRET_KEY="GENERATE_RANDOM_SECRET_HERE"

# ========================================
# Monitoring & Logging
# ========================================
LOG_FILE_PATH="/app/logs/trading-bot.log"
BACKUP_STORAGE_PATH="/app/backups"

# ========================================
# Optional: Other AI Providers (if needed)
# ========================================
# DEEPSEEK_API_KEY="xxx"
# OPENROUTER_API_KEY="xxx"
# EXA_API_KEY="xxx"
