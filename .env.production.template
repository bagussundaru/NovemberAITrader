# Live Trading Bot Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Node Environment
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://trading_user:CHANGE_ME@localhost:5432/trading_bot
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# Nebius AI Configuration
NEBIUS_API_URL=https://api.nebius.ai
NEBIUS_JWT_TOKEN=YOUR_NEBIUS_JWT_TOKEN_HERE
NEBIUS_MODEL=trading-v1
NEBIUS_TIMEOUT=30000
NEBIUS_MAX_RETRIES=3

# Gate.io Configuration
GATE_API_KEY=YOUR_GATE_API_KEY_HERE
GATE_API_SECRET=YOUR_GATE_API_SECRET_HERE
GATE_TESTNET=false
GATE_BASE_URL=https://api.gateio.ws
GATE_TIMEOUT=30000
GATE_MAX_RETRIES=3

# Trading Configuration
TRADING_PAIRS=BTC/USDT,ETH/USDT,ADA/USDT
MAX_DAILY_LOSS=1000
MAX_POSITION_SIZE=500
STOP_LOSS_PERCENTAGE=0.05
MAX_OPEN_POSITIONS=5
EMERGENCY_STOP_ENABLED=true

# Market Data Configuration
MARKET_DATA_UPDATE_INTERVAL=5000
MARKET_DATA_HISTORY_LENGTH=100
ENABLE_REAL_TIME_UPDATES=true

# Technical Indicators Configuration
RSI_PERIOD=14
MACD_FAST_PERIOD=12
MACD_SLOW_PERIOD=26
MACD_SIGNAL_PERIOD=9
MOVING_AVERAGE_PERIOD=20

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/trading-bot.log
ENABLE_CONSOLE_LOGGING=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Security Configuration
JWT_SECRET=YOUR_SECURE_JWT_SECRET_AT_LEAST_32_CHARACTERS_LONG
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60000

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Deployment Configuration
DEPLOYMENT_ENV=production
CONTAINER_NAME=live-trading-bot
RESTART_POLICY=unless-stopped

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=7
BACKUP_STORAGE_PATH=/app/backups